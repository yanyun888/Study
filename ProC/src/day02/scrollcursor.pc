	printf("%d,%s,%lf\n",emp.id,emp.name,emp.salary);
	
	exec sql fetch first empcursor into :emp ;
	printf("%d,%s,%lf\n",emp.id,emp.name,emp.salary);
	
	exec sql fetch absolute 15 empcursor into :emp ;
	printf("%d,%s,%lf\n",emp.id,emp.name,emp.salary);

	exec sql close empcursor;
	exec sql commit work release;


	return 0;
